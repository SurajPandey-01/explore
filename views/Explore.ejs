<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore</title>
    <link rel="stylesheet" href="style1.css">
    <link rel="stylesheet" href="Images">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>

<body>
    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
    <header>
        <div class="navbar">
            <div id="logo">
                <img src="https://img.freepik.com/free-vector/detailed-travel-logo-design_23-2148639304.jpg" >
            </div>
            
            <div class="nav">
                <a href="http://localhost:8080/Search">HOME</a>&ensp;&ensp;&ensp;&ensp;
                <button><a href="http://localhost:8080/login">LOGIN</a></button>&ensp;&ensp;&ensp;&ensp;
                <button><a href="http://localhost:8080/signup">SIGN UP</a></button>
            </div>
        </div>
    </header>
    <div class="pic1">
        <video class="video1" autoplay="" loop="" muted=""
            poster="https://www.pexels.com/assets/videos/free-videos-7daa2ef41a140f70c757ce91913a4ecb90570b7d7cd2b401bae868350e02c83a.jpg"
            playsinline="">
            <source src="https://static.pexels.com/lib/videos/free-videos.mp4" type="video/mp4">
            <source src="https://static.pexels.com/lib/videos/free-videos.webm" type="video/webm">
        </video>
        <div class="container">
            <p class="typed">Welcome to Explore</p>
        </div>
        <form method="post" action="/explore"><input type="search" placeholder="&ensp;<%=dest%>" name="destination"><button id="search">Search</button></form>
    </div>
    <hr><br><br>
    <%for(let item of post){%>
        <div id="block">
            <div id="title">
                <h1>
                    <%=item. title%>
                </h1>
            </div>
            <br>
            <div id="description">
                <h3>
                    <%=item. description%>
                </h3>
            </div>

            <br>
            <div id="image"><img src="<%=item.img%>"></div>

            <br>
            <div id="country">
                <%=item. country%>
            </div>
            <br>
        </div>
        <br>
        <%}%>
</body>
<hr>
<footer>
    <div class="logo">
        <img src="https://img.freepik.com/free-vector/detailed-travel-logo-design_23-2148639304.jpg">
        <h4>EXPLORERS</h4>
    </div>
    <i id="insta" class="fa-brands fa-instagram" style="color: #f7fafd;"></i>&ensp;&ensp;
    <i id="Twitter" class="fa-brands fa-twitter" style="color: #f1f4f8;"></i>&ensp;&ensp;
    <i id="linkedin" class="fa-brands fa-linkedin"></i>
    <i id="copyright" class="fa-regular fa-copyright" style="color: #f2f4f7;">&ensp;<b>2023 EXPLORERS PVT.LTD</b></i>
</footer>
<script>
    // Get the button
    let mybutton = document.getElementById("myBtn");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>

</html>